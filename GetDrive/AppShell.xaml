<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GetDrive.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:GetDrive"
    xmlns:views="clr-namespace:GetDrive.Views"
    Shell.FlyoutBehavior="Flyout"
    Shell.BackgroundColor="{StaticResource Primary}"
    Shell.ForegroundColor="{StaticResource White}"
    Shell.TitleColor="{StaticResource White}"
    Shell.TabBarBackgroundColor="{StaticResource Primary}"
    Shell.TabBarUnselectedColor="{StaticResource White}"
    Shell.TabBarForegroundColor="{StaticResource PrimaryDark}">

    <TabBar>
        <ShellContent
            ContentTemplate="{DataTemplate views:AllRides}"
            Icon="travel_explore.svg"
            Route="allrides"/>

        <ShellContent
            ContentTemplate="{DataTemplate views:GetRide}"
            Icon="car.svg"
            Route="getride"/>

        <ShellContent
            ContentTemplate="{DataTemplate views:PublishRide}"
            Icon="add_circle.svg"
            Route="publishride"/>

        <ShellContent
            ContentTemplate="{DataTemplate views:Profile}"
            Icon="account.svg"
            Route="profile"/>
    </TabBar>

</Shell>