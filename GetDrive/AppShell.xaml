<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GetDrive.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:GetDrive"
    xmlns:f="clr-namespace:GetDrive.Resources.Fonts"
    xmlns:t="clr-namespace:GetDrive.Resources.Texts"
    xmlns:vs="clr-namespace:GetDrive.Views"
    Shell.FlyoutBehavior="Disabled"
    Shell.BackgroundColor="{StaticResource Primary}"
    Shell.ForegroundColor="{StaticResource White}"
    Shell.TitleColor="{StaticResource White}"
    Shell.TabBarBackgroundColor="{StaticResource Primary}"
    Shell.TabBarUnselectedColor="{StaticResource White}"
    Shell.TabBarForegroundColor="{StaticResource PrimaryDark}">

    <TabBar>
        <ShellContent
            ContentTemplate="{DataTemplate vs:RideListView}"
            Icon="travel_explore.svg"
            Route="ridelistview"/>

        <ShellContent
            ContentTemplate="{DataTemplate vs:GetRide}"
            Icon="car.svg"
            Route="getride"/>

        <ShellContent
            ContentTemplate="{DataTemplate vs:PublishRide}"
            Icon="add_circle.svg"
            Route="publishride"/>

        <ShellContent
            ContentTemplate="{DataTemplate vs:Profile}"
            Icon="profile.svg"
            Route="profile"/>
    </TabBar>

</Shell>