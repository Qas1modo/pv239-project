<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GetDrive.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:GetDrive"
    xmlns:f="clr-namespace:GetDrive.Resources.Fonts"
    xmlns:t="clr-namespace:GetDrive.Resources.Texts"
    xmlns:vs="clr-namespace:GetDrive.Views"
    Shell.FlyoutBehavior="Disabled"
    Shell.BackgroundColor="{StaticResource Primary}"
    Shell.ForegroundColor="{StaticResource White}"
    Shell.TitleColor="{StaticResource White}"
    Shell.TabBarBackgroundColor="{StaticResource Primary}"
    Shell.TabBarUnselectedColor="{StaticResource PrimaryDark}"
    Shell.TabBarForegroundColor="{StaticResource White}">

    <TabBar>
        <ShellContent
            ContentTemplate="{DataTemplate vs:RideListView}"
            Icon="car.svg"
            Route="ridelistview"/>

        <ShellContent
            ContentTemplate="{DataTemplate vs:RidePublishView}"
            Icon="add_circle.svg"
            Route="ridepublishview"/>
        
        <ShellContent
            ContentTemplate="{DataTemplate vs:RideRequests}"
            Icon="request_icon.svg"
            Route="riderequests"/>
        
        <ShellContent
            ContentTemplate="{DataTemplate vs:ManageProfileView}"
            Icon="profile.svg"
            Route="manageprofileview"/>

    </TabBar>
</Shell>