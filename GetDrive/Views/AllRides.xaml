<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="GetDrive.Views.AllRides"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="All Rides">

    <ScrollView>
        <VerticalStackLayout Padding="30,0"
                             Spacing="25">

            <HorizontalStackLayout Margin="0,30,0,0">
                <Button Text="Filter"
                        HorizontalOptions="Start"
                        VerticalOptions="Center"
                        Padding="10"
                        CornerRadius="10"
                        Command="{Binding FilterCommand}"
                        ImageSource="filter.svg"
                        ContentLayout="Left,20">
                </Button>

            </HorizontalStackLayout>

            <CollectionView>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="5" Padding="10" CornerRadius="10" HasShadow="True">
                            <VerticalStackLayout>

                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>